{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": "src",
		"types": ["node"],
		"declaration": true,
		"sourceMap": true,
		"baseUrl": "./src",
		"paths": {
			"~actions/*": ["actions/*"],
			"~lib/*": ["lib/*"],
			"~models": ["models/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "tests"]
}
